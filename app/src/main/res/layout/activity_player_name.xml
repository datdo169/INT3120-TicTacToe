<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".PlayerName"
    android:background="#f5f6e8">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/tic_tac_toe_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tic Tac Toe"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#f5ba46"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/playerNameEt"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#fecd56"
        android:hint="Enter Your Name"
        android:paddingStart="10dp"
        android:textColorHint="#555555"
        android:paddingEnd="10dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:paddingStart="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="0">
        <RadioButton
            android:id="@+id/r_with_online_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online mode"
            android:textSize="18sp"
            android:checked="true"
            android:buttonTint="#fecd56"/>
        <RadioButton
            android:id="@+id/r_play_with_computer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer Mode"
            android:textSize="18sp"
            android:checked="false"
            android:buttonTint="#fecd56"/>
    </RadioGroup>

    <Button
        android:id="@+id/startGameBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_back_yellow_100"
        android:text="start game"
        android:textSize="18sp"
        android:textStyle="bold"
        />

</LinearLayout>